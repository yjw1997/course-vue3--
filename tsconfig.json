{
  "compilerOptions": {
    "outDir": "dist", //  输出的目录
    "sourceMap": true, // 采用sourceMap
    "target": "es2016", // 目标语法
    "moduleResolution": "node", // 模块解析方式
    "strict": true, // 严格模式
    "resolveJsonModule": true, //  解析json模块
    "esModuleInterop": true, //  允许通过es6语法引入commonjs模块
    "jsx": "preserve", // jsx不转义
    "lib": ["ESNext", "DOM"], //不支持类库
    "baseUrl": ".",
    "paths": {
      "@vue/*": ["packages/*/src"]
    }
  }
}
